generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  password      String
  name          String?
  role          UserRole         @default(USER)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  facebookPosts FacebookPost[]
  instagramPosts InstagramPost[]
  tiktokPosts   TikTokPost[]

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}

// Facebook Posts
model FacebookPost {
  id              String            @id @default(cuid())
  userId          String
  content         String
  mediaUrl        String?
  mediaType       FacebookMediaType @default(TEXT)
  status          FacebookPostStatus @default(QUEUED)
  externalId      String?
  scheduledAt     DateTime?
  publishedAt     DateTime?
  responseMessage String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("facebook_posts")
}

enum FacebookMediaType {
  TEXT
  PHOTO
  VIDEO
}

enum FacebookPostStatus {
  QUEUED
  PUBLISHED
  SCHEDULED
  FAILED
}

// Instagram Posts
model InstagramPost {
  id              String             @id @default(cuid())
  userId          String
  content         String
  mediaUrls       String[]           // Array of media URLs for carousel support
  mediaType       InstagramMediaType @default(IMAGE)
  status          InstagramPostStatus @default(QUEUED)
  externalId      String?
  containerId     String?            // Instagram container ID
  scheduledAt     DateTime?
  publishedAt     DateTime?
  responseMessage String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("instagram_posts")
}

enum InstagramMediaType {
  IMAGE
  VIDEO
  REELS
  STORIES
  CAROUSEL
}

enum InstagramPostStatus {
  QUEUED
  PUBLISHED
  FAILED
  PROCESSING
}

// TikTok Posts
model TikTokPost {
  id              String          @id @default(cuid())
  userId          String
  content         String
  videoUrl        String?
  title           String?
  status          TikTokPostStatus @default(QUEUED)
  externalId      String?
  uploadId        String?         // TikTok upload ID
  scheduledAt     DateTime?
  publishedAt     DateTime?
  responseMessage String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tiktok_posts")
}

enum TikTokPostStatus {
  QUEUED
  UPLOADING
  PUBLISHED
  FAILED
}
